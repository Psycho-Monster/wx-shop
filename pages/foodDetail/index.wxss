.foodDetail-container {
  background-color: #f2f2f2;
  height: 1420rpx;
}
.foodDetail-container .icon-zuojiantou {
  position: absolute;
  left: 21rpx;
  top: 39rpx;
  font-size: 55rpx;
}
.foodDetail-container .food-image {
  width: 100%;
  height: 682rpx;
}
.foodDetail-container .food-info {
  display: flex;
  background-color: #fff;
  padding: 26rpx;
  margin: 22rpx;
  border-radius: 20rpx;
}
.foodDetail-container .food-info .left .food-name {
  color: black;
  font-size: 38rpx;
  font-weight: bold;
}
.foodDetail-container .food-info .left .food-ranking {
  margin-top: 10rpx;
  color: #c58b4e;
}
.foodDetail-container .food-info .left .sale-count {
  margin-top: 8rpx;
  margin-bottom: 18rpx;
  color: #b0b0b0;
}
.foodDetail-container .food-info .left .price-prev,
.foodDetail-container .food-info .left .food-price {
  color: #e8472c;
  font-weight: bold;
}
.foodDetail-container .food-info .left .price-prev {
  font-size: 28rpx;
}
.foodDetail-container .food-info .left .food-price {
  font-size: 42rpx;
}
.foodDetail-container .food-detail {
  background-color: #fff;
  padding: 26rpx;
  border-radius: 20rpx;
  margin: 22rpx;
}
.foodDetail-container .food-detail .detail-text {
  color: black;
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.foodDetail-container .food-detail .food-description {
  display: flex;
}
.foodDetail-container .food-detail .food-description .left-text {
  width: 167rpx;
  color: #b5b5b5;
}
.foodDetail-container .food-detail .food-description .right-text {
  width: 560rpx;
}
