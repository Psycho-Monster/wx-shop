<view wx:if="{{isPayToOrderDetail}}">
<!-- 记得要改成order.longitude和order.latitude -->
  <map class="map" longitude="{{order.longitude}}" latitude="{{order.latitude}}" show-location="true" scale="{{14}}" markers="{{markers}}">
  </map>
</view>
<view class="orderDetail-container {{isPayToOrderDetail?'payToOrderDetail-container':''}}">
  <view class="laba-container" wx:if="{{isPayToOrderDetail}}">
    <van-tag color="#fcf4cd" text-color="#eb872d" closeable round>
      <view slot="" class="custom-tag">
        <view class="iconfont icon-laba"></view>
        <view>商家5分钟内未接单，订单将自动取消</view>
      </view>
    </van-tag>
  </view>
  <view class="deliverDetail-container" wx:if="{{isPayToOrderDetail}}">
    <view class="top">
      <view>
        <view class="deliver-time">预计15:31送达</view>
        <view class="deliver-type">蜂鸟快送</view>
      </view>
      <image src="{{order.imagePath}}"></image>
    </view>
    <van-divider />
    <view class="bottom">
      <image src="/static/images/cancel_order.png"></image>
      <view>取消订单</view>
    </view>
  </view>
  <view class="orderStatus-container" wx:if="{{!isPayToOrderDetail}}">
    <text class="order-status">{{order.orderStatus}}</text>
    <text class="iconfont icon-iconfonti"></text>
  </view>
  <view class="gratitude-container" wx:if="{{!isPayToOrderDetail}}">
    <view class="gratitude-text">感谢您对饿了么的信任，期待再次光临</view>
    <van-divider />
    <view class="evaluation-container">
      <image src="/static/images/evaluation_star.jpg"></image>
      <view class="evaluation-text">评价得9金币</view>
    </view>
  </view>
  <view class="compensation-container" wx:if="{{!isPayToOrderDetail}}">
    <view>
      <view class="title">食无忧理赔申请</view>
      <view class="content">如发现食品变质、存在异物或引发就医，均可申请理赔</view>
    </view>
    <view class="arrow-right">
      <text class="iconfont icon-iconfonti"></text>
    </view>
  </view>
  <view class="food-container">
    <view class="shop-title">{{order.name}}</view>
    <view>
      <view class="food" wx:for="{{order.orderList}}" wx:key="index">
        <image src="{{item.image}}"></image>
        <view class="food-info">
          <view class="food-name">{{item.name}}</view>
          <view class="food-count">× {{item.count}}</view>
        </view>
        <view class="food-price">¥{{item.price}}</view>
      </view>
    </view>
    <view class="packing-fee">
      <text>配送费</text>
      <text>¥4</text>
    </view>
    <!-- <view class="discount-container">
      <view class="icon-container">
        <view class="prev-icon">¥</view>
        <text>红包/抵用券</text>
      </view>
      <text class="discount-fee">-¥5</text>
    </view> -->
    <van-divider />
    <view class="totalPrice-container">
      <image src="/static/images/small-phone.png"></image>
      <view class="call-shop">电话商家</view>
      <view class="discountFee-total">
        <text>已优惠</text>
        <text class="discount-fee">¥5</text>
      </view>
      <view class="orderPrice-container">
        <text class="price-prev">实付¥</text>
        <text class="order-price">{{order.orderPrice}}</text>
      </view>
    </view>
  </view>
  <view class="deliverInfo-container">
    <view class="title">配送信息</view>
    <view class="info-item">
      <text class="info-title">送达时间</text>
      <text class="deliver-time">{{order.deliverInfo.deliverTime}}</text>
    </view>
    <view class="info-item">
      <text class="info-title">送货地址</text>
      <text class="address">{{order.deliverInfo.deliverAddress}}</text>
    </view>
    <view class="info-item">
      <text class="info-title">配送服务</text>
      <text class="deliver-service">{{order.deliverInfo.deliverService}}</text>
    </view>
  </view>
  <view class="orderInfo-container">
    <view class="title">订单信息</view>
    <view class="info-item">
      <text class="info-title">订单号码</text>
      <view>
        <text>{{order.orderInfo.orderNo}}</text>
        <text class="divide-line">|</text>
        <text class="copy" bindtap="copy" data-copyText="{{order.orderInfo.orderNo+''}}">复制</text>
      </view>
    </view>
    <view class="info-item">
      <text class="info-title">下单时间</text>
      <text>{{order.orderInfo.orderTime}}</text>
    </view>
    <view class="info-item">
      <text class="info-title">支付方式</text>
      <text>{{order.orderInfo.payType}}</text>
    </view>
    <view class="info-item">
      <text class="info-title">备注</text>
      <text>{{order.orderInfo.note}}</text>
    </view>
  </view>
</view>